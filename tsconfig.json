{
  "compilerOptions": {
    "target": "ESNext", 
    "esModuleInterop": true,
    "isolatedModules": true, 
    "module": "ESNext", 
    "moduleResolution": "bundler", 
    "lib": [ "ESNext", "DOM" ],
    "rootDir": "./src", 
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "noImplicitAny": true, 
    "noImplicitThis": true, 
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "strict": true,
    "skipLibCheck": true, 
  },
  "exclude": [ 
    "node_modules",
    "build",
    "demo",
    "dist"
  ],
}
