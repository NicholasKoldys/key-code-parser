{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext", 
    "moduleResolution": "Node", 
    "lib": [ "ESNext", "DOM" ],
    "rootDir": "./src", 
    "outDir": "./dist",
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist/lib",
  },
  "exclude": [ "node_modules", "util/**/*", "./src/_test/**/*", "./dist/**/*" ],
}
