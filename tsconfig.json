{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,//this works only with below noEmit set to true
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}